<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarAutoStarter.InitialMainPage"
             Title="Create An Account"
             Padding="40">

    <StackLayout>
        <Label Text="Welcome to Auto - a car starter for everyone. Click button below to make an account."
               FontSize="30" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
        <Button x:Name="createFirstAccount" Text="Create an account" Clicked="createFirstAccount_Clicked"/>
    </StackLayout>
        
</ContentPage>
