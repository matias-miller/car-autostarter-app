<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarAutoStarter.MainPage"
             Title="Navigation Home">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Settings" Order="Secondary"/>
        <ToolbarItem x:Name="NewUser" Text="New User" Order="Secondary" Clicked="NewUser_Clicked"/>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <Label FontSize="24"  Padding="20 20 100" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Text="No user account created. Use the Navigation bar to create an account."/>

    </StackLayout>

</ContentPage>
